@model UsersApp.ViewModels.QuizScoresViewModel

@{
    ViewData["Title"] = "Quiz Scores";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Link to the CSS file -->
<link rel="stylesheet" href="~/wwwroot/css/site.css" />

<h1>Scores for @Model.Topic</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>User</th>
            <th>Score</th>
            <th>Submission Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Scores != null && Model.Scores.Any())
        {
            @foreach (var score in Model.Scores)
            {
                <tr>
                    <td>@score.UserName</td>
                    <td>@score.Score</td>
                    <td>@score.SubmissionDate.ToString("g")</td>
                </tr>
            }
        }
        else
        {
            @for (int i = 0; i < 4; i++)
            {
                <tr>
                    <td>User @i</td>
                    <td>Score @i</td>
                    <td>@DateTime.Now.ToString("g")</td>
                </tr>
            }
        }
    </tbody>
</table>
