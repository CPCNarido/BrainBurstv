@{
    ViewData["Title"] = "Quiz Creator Manual";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/Global/Header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Quiz_Creation_Manual.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rum+Raisin&display=swap" rel="stylesheet">
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            const quizTypeSelect = document.getElementById('quiz-type');

            form.addEventListener('submit', function (event) {
                const quizName = document.getElementById('quiz-name').value.trim();
                const quizDesc = document.getElementById('quiz-desc').value.trim();
                const gradeLevel = document.getElementById('grade-level').value;

                if (!quizName || !quizDesc || !gradeLevel) {
                    event.preventDefault();
                    alert('Please fill out all fields before continuing.');
                }
            });
        });
    </script>
</head>
<body>
    <div class="container1">
                    <button onclick="history.back()" class="back-button"><</button>
            <style>
                .back-button{
                    width: 50px;
                    height: 50px;
                    position: absolute;
                    top: 130px;
                    left: 20px;
                    border: 1px solid black;
                    border-radius: 20px;
                    background-color: #F5D059;
                    align-items: center;
                    font-weight: 1000;
                    cursor: pointer;
                }
                .back-button :hover{
                    opacity: 0.1;

                }
            </style>
        <div class="quiz-maker-container">
            <form method="post" action="/QuizCreation/CreateManualQuiz">
                <div class="title">
                    <div class="title-text">Create your new quiz!!</div>
                </div>
                <div class="quiz-name">
                    <input type="text" id="quiz-name" name="topic" placeholder="Enter Quiz Name..." required />
                </div>
                <div class="desc-title">
                    <div class="desc-title-text">Add Quiz Description!!</div>
                </div>
                <div class="quiz-desc">
                    <input id="quiz-desc" name="description" placeholder="Enter Quiz Description..." required />
                </div>
                <div class="grade-level">
                    <select id="grade-level" name="gradeLevel" required>
                        <option value="" disabled selected>Grade Level</option>
                        <option value="Elementary">Elementary</option>
                        <option value="Highschool">Highschool</option>
                        <option value="College">College</option>
                    </select>
                </div>
                <div class="submit-button">
                    <button type="submit">Continue</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>