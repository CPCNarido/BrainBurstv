@{
    ViewData["Title"] = "Quiz Creator Manual";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/Global/Header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Quiz_Creation_Manual.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rum+Raisin&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container1">
        <div class="quiz-maker-container">
            <form method="post" action="/Quiz/Create">
                <div class="title">
                    <div class="title-text">
                        Create Your Quiz!
                    </div>
                </div>
                <div class="quiz-name">
                    <input type="text" id="quiz-name" name="quizName" placeholder="Enter Quiz Name......" />
                </div>
                <div class="desc-title">
                    <div class="desc-title-text">
                        Add Quiz Description!
                    </div>
                </div>
                <div class="quiz-desc">
                    <input id="quiz-desc" name="quizDesc" placeholder="Enter Quiz Description"></input>
                </div>
                <div class="quiz-type">
                    <select id="quiz-type" name="quizType">
                        <option value="" disabled selected>Type of Quiz</option>
                        <option value="1">Multiple Choice</option>
                        <option value="2">True/False</option>
                        <option value="3">Fill in the Blank</option>
                    </select>
                </div>
                <div class="grade-level">
                    <select id="grade-level" name="gradeLevel">
                        <option value="" disabled selected>Grade Level</option>
                        <option value="1">1st Grade</option>
                        <option value="2">2nd Grade</option>
                        <option value="3">3rd Grade</option>
                        <option value="4">4th Grade</option>
                        <option value="5">5th Grade</option>
                        <option value="6">6th Grade</option>
                        <option value="7">7th Grade</option>
                        <option value="8">8th Grade</option>
                        <option value="9">9th Grade</option>
                        <option value="10">10th Grade</option>
                        <option value="11">11th Grade</option>
                        <option value="12">12th Grade</option>
                    </select>
                </div>
                <div class="difficulty">
                    <select id="difficulty" name="difficulty">
                        <option value="" disabled selected>Select Difficulty</option>
                        <option value="1">Easy</option>
                        <option value="2">Medium</option>
                        <option value="3">Hard</option>
                    </select>
                </div>
                <div class="submit-button">
                    <button type="submit">Continue</button>
                </div>
            </form>
        </div>
    </div>  
</body>
</html>