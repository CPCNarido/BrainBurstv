@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/Global/Header.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/ContactUs.css" asp-append-version="true" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rum+Raisin&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class="container1">
            <div class="back-ground">
                <div class="contact-us-text">
                    <h1>Contact Us</h1>
                    <p>
                        Brain Burst is here to help with any questions or feedback you have.
                        Our team is dedicated to providing the support you need and ensuring your experience with us is exceptional.
                    </p>
                </div>
                <div class="contact-box">
                    <div class="contact-item" onclick="window.open('https://www.facebook.com/christian.narido.33', '_blank')">
                        <img src="~/Assets/ContactUs/image.png" alt="Facebook Logo">
                        <p>Facebook</p>
                    </div>
                    <div class="contact-item" onclick="window.open('https://www.instagram.com/intan_pol/', '_blank')">
                        <img src="~/Assets/ContactUs/image 2.png" alt="Instagram Logo">
                        <p>Instagram</p>
                    </div>
                    <div class="contact-item" onclick="window.open('https://www.twitter.com', '_blank')">
                        <img src="~/Assets/ContactUs/image 3.png" alt="Twitter Logo">
                        <p>Twitter</p>
                    </div>
                    <div class="contact-item" onclick="window.location.href='brainburstccsad@gmail.com'">
                        <img src="~/Assets/ContactUs/image 9.png" alt="Email Logo">
                        <p>Email</p>
                    </div>
                    <div class="contact-item" onclick="window.location.href='tel:+639298086187'">
                        <img src="~/Assets/ContactUs/image 10.png" alt="Phone Logo">
                        <p>Mobile Number</p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
